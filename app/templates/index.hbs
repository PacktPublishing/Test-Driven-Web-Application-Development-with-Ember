<div class="container">
    <h2>Products</h2>
    <div class="row">
        {{#each model as |product|}}
          <div class="col-sm-4 col-md-3">
            {{#link-to 'product' product class="thumbnail"}}
              <img src="{{product.image.url}}" alt="{{product.name}}">
              <div class="caption">
               <h3>{{product.name}}</h3>
              </div>
            {{/link-to}}
          </div>
        {{/each}}
    </div>
</div>
{{outlet}}