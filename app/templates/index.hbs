<div class="container">
    <h2>Products</h2>
    <div class="row">
        {{#each model as |product|}}
          <div class="col-sm-6 col-md-3">
            <div class="thumbnail">
              <img src="http://via.placeholder.com/250x250" alt="Category">
              <div class="caption">
                <h3>{{product.name}}</h3>
              </div>
            </div>
          </div>
        {{/each}}
    </div>
</div>
{{outlet}}